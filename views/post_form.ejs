<div class="post_form">
    <h1><%= title %></h1>
    <form method="POST" action="" enctype="multipart/form-data">
        <div class="getTitle">
            <label for="post_title">Title: </label>
            <input name="post_title" placeholder="title" type="text" required=true
                    value="<%= (typeof(post) === 'undefined') ? '' : post.title %>">
        </div>
        <div class="getMessage">
            <label for="message">Message: </label>
            <textarea name="message" placeholder="message">
                <%= (typeof(post) === 'undefined') ? '' : post.message %>
            </textarea>
        </div>
        <% if (title === 'Create Post') { %> 
            <div class="getMedia">
                <label for="media">Image: </label>
                <input name="media" type="file">
            </div>
        <% } else { %>
            <input type="hidden" name="date" value="<%= post.date %>">    
            <input type="hidden" name="media" value="<%= post.media %>">    
        <% } %>
        <input type="submit" value="submit">
    </form>
    <% if (typeof(errors) !== 'undefined') { %> 
        <%- include('./errors', {errors: errors}) %>
    <% } %>
</div>