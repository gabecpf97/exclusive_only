<div class="post_delete">
    <h1>Delete Post</h1>
    <h2 class="confirmation">Really delete this post?</h2>
    <div class="post post_preview">
        <h2><%= post.title %></h2>
        <p><%= post.message %></p>
        <% if (typeof(post.media) !== 'undefined') { %>
            <img class="preview" src="data:image/<%=post.media.content_type%>;base64,<%=post.media.data.toString('base64')%>">
        <% } %>
    </div>
    <form method="POST" action="">
        <input type="hidden" name="postid" value="<%= post.id %>">
        <input class="submit" type="submit" value="Delete">
    </form>
</div>